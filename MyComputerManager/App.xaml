<Application
    x:Class="MyComputerManager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MyComputerManager"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ControlsDictionary />
                <ui:ThemesDictionary Theme="Dark"/>
                <ResourceDictionary Source="Styles/ItemListStyle.xaml"/>
                <ResourceDictionary Source="Styles/PathBoxStyle.xaml"/>
                <ResourceDictionary Source="Styles/MenuButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="ContentControlThemeFontFamily">微软雅黑</FontFamily>
            <FontFamily x:Key="DFontFamily">微软雅黑</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
