<ui:UiPage x:Class="MyComputerManager.Views.DetailPage"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
           xmlns:local="clr-namespace:MyComputerManager.Views"
           xmlns:controls="clr-namespace:MyComputerManager.Controls"
           Title="DetailPage"
           d:DesignHeight="450" d:DesignWidth="800"
           Scrollable="True"
           mc:Ignorable="d">

    <StackPanel x:Name="RootPanel" Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="{Binding Item.Name}"
                   DockPanel.Dock="Top"
                   FontSize="20" />
        <controls:PathBox Margin="2,0" Path="{Binding Item.ExePath}" />
    </StackPanel>
</ui:UiPage>
