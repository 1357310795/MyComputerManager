<Page
    x:Class="MyComputerManager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyComputerManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MainPage"  Background="{DynamicResource ControlFillColorDefaultBrush}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ListBox ItemTemplate="{StaticResource ListItemDataTemplate}" ItemsSource="{Binding Items}" Style="{StaticResource ListBoxStyle}" Margin="0,6,0,0">
        
    </ListBox>
</Page>
